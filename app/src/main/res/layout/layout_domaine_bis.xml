<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRÃ‰ER UN DOMAINE"
        android:id="@+id/textTitreDomaine"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nom :"
            android:id="@+id/textNomDomaine"
            android:autoText="false"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNomDomaine"
            android:layout_alignBottom="@+id/textNom"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/textTitreDomaine"
            android:textSize="14dp"
            android:textColor="#888888" />
    </LinearLayout>

    <Button
        style="?android:textAppearanceSmall"
        android:id="@+id/buttonValider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Valider"
        android:textStyle="bold"
        android:background="#66d070"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="tryToSendDomaine" />
</LinearLayout>