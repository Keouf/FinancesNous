<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Magasin_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Créer un magasin"
        android:id="@+id/textTitreCreerMagasin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nom * :"
        android:id="@+id/textView11"
        android:layout_below="@+id/textTitreCreerMagasin"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Adresse :"
        android:id="@+id/textView12"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/button"
        android:background="#66d070"
        android:layout_below="@+id/textView14"
        android:layout_toEndOf="@+id/textView12"
        android:onClick="tryToSendMagasin"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annuler"
        android:onClick="annulerMagasin"
        android:id="@+id/button2"
        android:background="#dd514c"
        android:layout_alignTop="@+id/button"
        android:layout_toEndOf="@+id/editTextCPMag" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNomMag"
        android:layout_above="@+id/textView12"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView13"
        android:textSize="14dp"
        android:textColor="#888888"
        android:layout_marginLeft="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAdrMag"
        android:textColor="#888888"
        android:textSize="14dp"
        android:inputType="textPostalAddress"
        android:hint="Rue"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignStart="@+id/editTextNomMag"
        android:layout_alignEnd="@+id/editTextNomMag" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/editTextCPMag"
        android:layout_below="@+id/editTextAdrMag"
        android:layout_alignStart="@+id/editTextAdrMag"
        android:maxLength="5"
        android:hint="Code postal"
        android:textColor="#888888"
        android:textSize="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextVilleMag"
        android:layout_below="@+id/editTextCPMag"
        android:hint="Ville"
        android:layout_alignStart="@+id/editTextCPMag"
        android:layout_alignEnd="@+id/editTextNomMag"
        android:textColor="#888888"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Site-web :"
        android:id="@+id/textView13"
        android:layout_below="@+id/editTextVilleMag"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSiteMag"
        android:inputType="textUri"
        android:textColor="#888888"
        android:textSize="14dp"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignStart="@+id/editTextVilleMag"
        android:layout_alignEnd="@+id/editTextVilleMag"
        android:hint="Exemple : www.magasin.com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Téléphone :"
        android:id="@+id/textView14"
        android:layout_below="@+id/editTextSiteMag"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editTextTelMag"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignStart="@+id/editTextSiteMag"
        android:maxLength="10"
        android:textColor="#888888"
        android:textSize="14dp" />

</RelativeLayout>
